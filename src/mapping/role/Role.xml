<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="moka.role.dao.RoleDao">
    <insert id="insert" parameterType="moka.role.bo.Role" useGeneratedKeys="true" keyProperty="id">
      INSERT INTO role (
        name, createDate, updateDate, state,applicationId
      ) VALUES (
        #{name},#{createDate},#{updateDate},#{state},#{applicationId}
      )
    </insert>

    <select id="findOne" parameterType="Integer" resultType="moka.role.to.RoleTo">
        SELECT * FROM role WHERE id = #{id};
    </select>

    <select id="findCount" parameterType="moka.basic.page.Page" resultType="Integer">
        SELECT COUNT(id) FROM role r WHERE r.applicationId = #{applicationId} AND r.state != 1;
    </select>

    <select id="findPage" parameterType="moka.basic.page.Page" resultType="moka.role.to.RoleTo">
        SELECT * FROM role r WHERE r.applicationId = #{applicationId} AND r.state != 1 LIMIT #{pageStart} , #{pageSize};
    </select>

    <select id="findUserRoles" parameterType="Integer" resultType="moka.role.to.RoleTo">
        SELECT r.* FROM role_user ru LEFT JOIN role r ON r.id = ru.roleId WHERE 1 = 1 AND ru.userId = #{userId}
    </select>

    <delete id="deleteMenuOfRole" parameterType="Integer">
        DELETE FROM menu_role WHERE roleId = #{roleId}
    </delete>

    <insert id="insertMenuOfRole" parameterType="java.util.List" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO menu_role (roleId, menuId) VALUES
        <foreach collection="list" item="item" index="index" separator =",">
            (#{item.roleId},#{item.menuId})
        </foreach>
    </insert>

    <insert id="insertRoleOfUser" parameterType="java.util.List" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO role_user (roleId, userId) VALUES
        <foreach collection="list" item="item" index="index" separator=",">
            (#{item.roleId},#{item.userId})
        </foreach>
    </insert>

</mapper>